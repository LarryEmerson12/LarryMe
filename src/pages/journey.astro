---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, JOURNEY, SOCIALS } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const d = new Date();
let year = d.getFullYear();

---

<Layout title={JOURNEY.TITLE} description={JOURNEY.DESCRIPTION}>
  <Container>
    <h1 class="animate font-semibold text-black dark:text-white">
      My journey ðŸŒ†
    </h1>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <span class="animate">
            <p>
              Hello, I'm Larry, and I'm going to tell you my journey.
            </p>
          </span>
          <span class="animate">
            <p class="animate font-semibold text-black dark:text-white">
